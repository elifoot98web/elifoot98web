rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rooms/{roomId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.hostPlayerId;
    }
    
    match /rooms/{roomId}/callerCandidates/{iceCandidateId} {
      allow read, write: if request.auth != null;
    }

    match /rooms/{roomId}/calleeCandidates/{iceCandidateId} {
      allow read, write: if request.auth != null;
    }
  }
}